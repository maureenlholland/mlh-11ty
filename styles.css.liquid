/* apply a natural box layout model to all elements, but allowing components to change - thanks to Paul Irish */
html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body {
  margin: 0;
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: auto;
  grid-template-areas:
    "header"
    "main"
    "footer";
}

header,
footer {
  text-align: center;
  padding: 50px;
  background-image: url({{ banner }});
  background-size: cover;
}

header {
  grid-area: header;
  background-position: center;
}

footer {
  grid-area: footer;
  background-position: center 75%;
}

main {
  grid-area: main;
}

@media screen and (min-width: 980px) {
  body {
    height: 100vh;
    grid-template-columns: 1fr 2fr;
    grid-template-rows: 1fr 1fr;
    grid-template-areas:
      "header main"
      "footer main";
  }
  header {
    grid-row: 1 / -1;
  }
  footer {
    grid-row: 2 / -1;
    position: relative;
    z-index: 1;
    background-image: none;
  }
  main {
    overflow-y: scroll;
  }
}
